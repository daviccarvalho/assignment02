<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!--Main content of update view-->
<main>
<div class="container pb-3 pt-3">
    <div class="row">
  
        <div class="offset-md-3 col-md-4">

            <form class="form" method="POST">

                <div class="form-group form-floating">
                    <input type="text" class="form-control" id="lastNameTextField" placeholder="Enter last name" name="lastName"
                    value=" <%= contactList.last_name %>"
                    required>
                    <label for="lastNameTextField">Last Name</label>
                </div>

                <div class="form-group form-floating">
                    <input type="text" class="form-control" id="firstNameTextField" placeholder="Enter first name" name="firstName"
                    value=" <%= contactList.first_name %>"
                    required>
                    <label for="firstNameTextField">First Name</label>
                </div>

                <div class="form-group form-floating">
                    <input type="text" class="form-control" id="jobTitleTextField" placeholder="Enter job title" name="jobTitle"
                    value=" <%= contactList.job_title %>"
                    required>
                    <label for="jobTitleTextField">Job Title</label>
                </div>

                <div class="form-group form-floating">
                    <input type="text" class="form-control" id="companyTextField" placeholder="Enter company's name" name="company"
                    value=" <%= contactList.company %>"
                    required>
                    <label for="companyTextField">Company</label>
                </div>

                <div class="form-group form-floating">
                    <input type="text" class="form-control" id="emailTextField" placeholder="Enter e-mail" name="email"
                    value=" <%= contactList.email %>"
                    required>
                    <label for="emailTextField">E-mail</label>
                </div>

                <div class="form-group form-floating">
                    <input type="text" class="form-control" id="phoneNumberTextField" placeholder="Enter phone number" name="phone"
                    value=" <%= contactList.phone %>"
                    required>
                    <label for="phoneNumberTextField">Phone Number</label>
                </div>

                <div class="form-group text-right pt-3">
                <button class="w-100 btn btn-success" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                <a href="/contact-list" class="w-100 btn btn-warning">
                <i class="fas fa-undo"></i> Cancel</a>

                <a href="/contact-list/delete/<%= contactList._id%>" class="w-100 btn btn-danger">
                <i class="fas fa-trash-alt"></i> Delete </a>
                </div>
              
            </form><br>
        </div>

    </div>
</div>
</main>

<%- include ../partials/bottom_nav.ejs %>

<%- include ../partials/footer.ejs %>