<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!--Main content-->

<main class="container">
<div class="row">
  <div>
    <div class="offset-md-1 col-md-10">
      <h1><%= title %></h1>
      <a href="/contact-list/add" class="btn btn-primary" role="button">
      <i class="fas fa-plus-circle"></i> Add a Contact </a>
      <br>
      <table class="table table-bordered table-striped table-hover">
        <!--Head Row-->
        <tr class="d-flex">
          <th class="text-center col-1">Last Name</th>
          <th class="text-center col-1">First Name</th>
          <th class="text-center col-1">Job Title</th>
          <th class="text-center col-2">Company</th>
          <th class="text-center col-3">E-mail</th>
          <th class="text-center col-2">Phone</th>
          <th class="text-center col-1"></th>
          <th class="text-center col-1"></th>
        </tr>

        <!--Repeatable Template Row-->

        <% for(let count = 0; count < ContactList.length; count++) { %>
        
          <tr class="d-flex">
            <td class="text-center col-1"><%= ContactList[count].last_name %></td>
            <td class="text-center col-1"><%= ContactList[count].first_name %></td>
            <td class="text-center col-1"><%= ContactList[count].job_title %></td>
            <td class="text-center col-2"><%= ContactList[count].company %></td>
            <td class="text-center col-3"><%= ContactList[count].email %></td>
            <td class="text-center col-2"><%= ContactList[count].phone %></td>
            <th class="text-center col-1"></th>
            <th class="text-center col-1"></th>
          </tr>

        <% } %>

      </table>
    </div>
  </div>
</div>
</main>

<%- include ../partials/bottom_nav.ejs %>

<%- include ../partials/footer.ejs %>